conky.config = { 

	background = true,
	use_xft = true,
	font = 'Monospace:bold:pixelsize=11',
	xftalpha = 0.8,
	update_interval = 1.0,
	total_run_times = 0,
	own_window = true,
	own_window_transparent = true,
	own_window_type = 'desktop',
	own_window_class = 'conky',
	own_window_argb_visual = true,
	--own_window_colour = '#263041',
